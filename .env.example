# --- 1. The Brain ---
# Choose 'groq' or 'anthropic'
LLM_PROVIDER=groq
GROQ_API_KEY=gsk_...<PASTE_YOUR_GROQ_KEY_HERE>
# ANTHROPIC_API_KEY=sk-...

# --- 2. The Target Repo ---
# Your GitHub username and the repo you just created
GITHUB_TOKEN=ghp_...<PASTE_YOUR_GITHUB_PAT_HERE>
GITHUB_REPO=your_username/sre-demo-target

# --- 3. The Knowledge Base ---
NOTION_API_KEY=secret_...<PASTE_YOUR_NOTION_SECRET_HERE>
NOTION_RUNBOOK_DATABASE_ID=...<PASTE_YOUR_NOTION_ID_HERE>

# --- 4. Internal Wiring (Docker Defaults) ---
# Don't change these unless you changed docker-compose ports
PROMETHEUS_URL=http://prometheus:9090
LOKI_URL=http://loki:3100
REDIS_URL=redis://redis:6379
QDRANT_URL=http://qdrant:6333
TARGET_APP_URL=http://target-app:8000

# --- 5. App Settings ---
LOG_LEVEL=INFO
DEBUG=true
